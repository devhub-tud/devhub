    <changeSet id="database_refactor" author="Jan-Willem Gmelig Meyling">

		<dropForeignKeyConstraint baseTableName="pull_requests" constraintName="pr_repository_name_in_groups"/>
		<dropForeignKeyConstraint baseTableName="commit" constraintName="commit_repository_name_in_groups"/>
		<dropForeignKeyConstraint baseTableName="commit_comment" constraintName="commit_comment_commit_in_commits"/>
		<dropForeignKeyConstraint baseTableName="commit_comment" constraintName="source_commit_comments_in_commits"/>
		<dropForeignKeyConstraint baseTableName="pull_request_comments" constraintName="pr_commit_pr_in_prs"/>

        <addColumn tableName="build_instructions">
            <column name="build_timeout" type="int" value="300" defaultValue="300"/>
        </addColumn>
        <dropColumn tableName="courses" columnName="build_timeout"/>
        <dropColumn tableName="groups" columnName="build_timeout"/>

        <renameTable oldTableName="courses" newTableName="course_edition"/>

        <createTable tableName="course">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="varchar(12)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addColumn tableName="course_edition">
            <column name="course_id" type="bigint"></column>
        </addColumn>

        <sql>
            insert into course (id, code, name) select id, code, name from course_edition;
            update course_edition set course_id = id;
        </sql>

        <addNotNullConstraint tableName="course_edition" columnName="course_id" columnDataType="bigint"/>
        <addForeignKeyConstraint referencedTableName="course" referencedColumnNames="id" constraintName="course_edition_course_id"
             baseTableName="course_edition" baseColumnNames="course_id"/>

        <dropColumn tableName="course_edition" columnName="name"/>

        <renameColumn tableName="course_properties" oldColumnName="course_id" newColumnName="course_edition_id"/>

        <renameColumn tableName="course_assistants" oldColumnName="course_id" newColumnName="course_edition_id"/>
        <renameColumn tableName="assignments" oldColumnName="course_id" newColumnName="course_edition_id"/>
        <renameColumn tableName="groups" oldColumnName="course_id" newColumnName="course_edition_id"/>

